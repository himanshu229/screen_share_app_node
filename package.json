{
  "name": "screen-share-app",
  "version": "1.0.0",
  "description": "Real-time screen sharing application with 120+ FPS using WebSocket",
  "main": "server/index.js",
  "scripts": {
    "start": "set PORT=3000 && set NODE_ENV=production && node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "prod": "npm run build && npm start",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "path": "^0.12.7",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "screen-sharing",
    "websocket",
    "real-time",
    "nodejs",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT"
}
